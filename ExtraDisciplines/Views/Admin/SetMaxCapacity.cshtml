@model Course

@{
    ViewData["Title"] = "Set Max Capacity";
}

<div class="auth">
    <a href="@Url.Action("Index")"><div class="back-arrow"></div></a>

    <h1 style="text-align:center">Set Max Capacity</h1>
    <form asp-action="SetMaxCapacity" asp-route-id="@Model.Id" method="post">
        <div class="form-group">
            <label asp-for="MaxCapacity">Max Capacity</label>
            <input asp-for="MaxCapacity" class="form-control" />
            <span asp-validation-for="MaxCapacity" class="text-danger"></span>
        </div>
        <button id="submit-button" type="submit" class="btn btn-primary">Save</button>
    </form>
    @*<a href="@Url.Action("Index")">Back to List</a>*@
    <script>
        var x = document.getElementsByClassName('pb-3');
        x[0].style.backgroundColor = "transparent";
        x[0].style.border = "0px";
        x[0].style.boxShadow = "0px 0px";
    </script>
</div>
